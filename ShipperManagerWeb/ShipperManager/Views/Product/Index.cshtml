@model IEnumerable<ShipperManager.Models.SanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Sản Phẩm</h2>
<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "Edit", new { ma = item.Id },new { @class = "btn btn-info" }) <br />
                @Html.ActionLink("Chi Tiết", "Details", new { ma = item.Id }, new { @class = "btn btn-info" }) <br />
                @Html.ActionLink("Xóa", "Delete", new { ma = item.Id }, new { @class = "btn btn-info" }) <br />
                <a class="btn btn-info" href="@Url.Action("AddOrderDetail","DonHang",new {@ProID = item.Id, @strURL = Request.Url.ToString()})">
                    Thêm Vào Đơn Hàng
                </a>
            </td>
        </tr>
    }
</table>

